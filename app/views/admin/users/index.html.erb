<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Approved</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.approved? ? 'Approved' : 'Pending' %></td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user) %>
          <%= link_to 'Show', admin_user_path(user) %>
          <%=
            link_to 'Delete',
                    admin_user_path(user),
                    data: {
                      'turbo-method': :delete,
                      'turbo-confirm': 'Are you sure?'
                    }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
